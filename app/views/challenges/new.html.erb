<%= form_tag(challenges_path) do |f| %>
  <div class="input-field">
    <%= label_tag :description %>
    <%= text_field(:challenge, :description)  %><br>
  </div>
  <div class="input-field">
    <%= label_tag :price %>
    <%= text_field(:challenge, :price) %><br>
  </div>
  <!-- need to make these drop downs so we can select a user and not type in a number -->
  <div class="input-field">
    <%= label_tag :acceptor %>
    <%= text_field(:challenge, :acceptor_id) %><br>
  </div>
  <div class="input-field">
    <%= label_tag :witness %>
    <%= text_field(:challenge, :witness_id) %><br>
  </div>
  <!-- end of note -->
  <div class="center">
    <%= submit_tag 'Challenge!', class: 'btn waves-effect waves-light' %>
  </div>
<% end %>
