<div class="user-container">

  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li id="login-tab" class="tab col s6"><a href="#login">Login</a></li>
        <li id="register-tab" class="tab col s6"><a class="active" href="#register">Register</a></li>
      </ul>
    </div>
  </div>

  <div id="register">
    <%= render partial: 'shared/errors', locals: {errors: @errors} %>
    <div class="row">
      <div class="card-panel">
        <!--TODO Change to dynamic path-->
        <%= form_for :user, class: 'col s12', url: '/users' do |f| %>
            <div class="row">
              <div class="input-field col s6">
                <%= f.text_field :first_name, id: 'first_name', class: 'validate' %><br>
                <%= f.label :first_name %>
              </div>
              <div class="input-field col s6">
                <%= f.text_field :last_name, id: 'last_name', class: 'validate' %><br>
                <%= f.label :last_name %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.text_field :email, class: 'validate' %>
                <%= f.label :email %><br>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.password_field :password, class: 'validate' %>
                <%= f.label :password %><br>
              </div>
            </div>
            <div class="row">
              <%= f.submit 'Register', class: 'btn waves-effect waves-light right' %>
            </div>
        <% end %>
      </div>
    </div>
  </div>

  <div id="login">
    <% if @errors %>
        <ul>
          <% @errors.each do |error| %>
              <li><%= error %></li>
          <% end %>
        </ul>
    <% end %>

    <div class="row">
      <div class="card-panel">
        <!--TODO Change to dynamic path-->
        <%= form_for :session, class: 'col s12', url: '/sessions' do |f| %>
            <div class="row">
              <div class="input-field col s12">
                <%= f.text_field :email, class: 'validate' %>
                <%= f.label :email %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.password_field :password, class: 'validate' %>
                <%= f.label :password %>
              </div>
            </div>
            <div class="row">
              <%= f.submit 'Login', class: 'btn waves-effect waves-light right'%>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
