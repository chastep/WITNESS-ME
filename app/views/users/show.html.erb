<div class="row">
  <div class="col s10 push-s1">
    <div class="card horizontal center">
      <div class="card-image">
        <%= image_tag @user.profile_picture.url(:medium) %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col s10 push-s1">
    <div class="card horizontal ">
        <div class="card-content">
          <span>Full Name: <%= @user.show_full_name %></span><br>
          <span>Username: <%= @user.username %></span><br>
          <span>Email: <%= @user.email %></span><br>
          <% if !@user.dwolla_url.include? "funding" %>
            <span><h5><strong>Add Bank Info: </strong><%= link_to 'Click Here', edit_user_path(@user) %></h5></span>
          <% end %>
        </div>
    </div>
  </div>
</div>

<% if @user.can_challenge? %>
  <%= form_tag(new_challenge_path, method: :get) do %>
    <div class="center">
      <%= submit_tag 'New Challenge', class: 'btn waves-effect waves-light orange darken-4' %>
    </div>
  <% end %>
<% end %>



<div class="row">
  <div class="col s10 push-s1">
    <h3>Pending Challenges</h3>
    <ul>
      <% @user.pending_challenges.each do |challenge| %>
        <li id="<%= challenge.id %>" class="col s12 m6 l4">
          <div class="card horizontal">
            <div class="card-stacked">
              <div class="card-content pending-challenge">
                <span><b>Date:</b> <%= challenge.created_at.strftime('%A, %b %d, %Y') %></span><br>
                <span><b>Time:</b> <%= challenge.created_at.strftime('%I:%M %p') %></span><br>
                <span><b>Description:</b> <%= challenge.description %></span><br>
                <span><b>Role:</b>
                  <% if challenge.challenger.id == @user.id %>
                    Challenger
                  <% elsif challenge.acceptor.id == @user.id %>
                    Acceptor
                  <% else %>
                    Witness
                  <% end %>
                </h5></span>
              </div>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>


<div class="row">
  <div class="col s10 push-s1">
    <h3>Completed Challenges</h3>
    <ul>
      <% @user.completed_challenges.each do |challenge| %>
        <li id="<%= challenge.id %>" class="col s12 m6 l4">
          <div class="card horizontal">
            <div class="card-stacked">
              <div class="card-content challenge-content">
                <span><b>Date:</b> <%= challenge.created_at.strftime('%A, %b %d, %Y') %></span><br>
                <span><b>Time:</b> <%= challenge.created_at.strftime('%I:%M %p') %></span><br>
                <span><b>Description:</b> <%= challenge.description %></span><br>
                <span><b>Role:</b>
                  <% if challenge.challenger.id == @user.id %>
                    Challenger
                  <% elsif challenge.acceptor.id == @user.id %>
                    Acceptor
                  <% else %>
                    Witness
                  <% end %>
                </span>
              </div>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
