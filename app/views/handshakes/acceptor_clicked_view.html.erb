<h4>Accept the Challenge!</h4>

<div id="challenge-row" class="row">
  <div class="col s6">
    <div id="view-acceptorthumbybutton">
      <img id="view-thumbupacceptor" src="http://www.clker.com/cliparts/t/x/1/j/4/B/thumbs-up-larger-hi.png" alt="thumbup">
      <p id="view-acceptor-p">Acceptor has joined!</p>
    </div>
  </div>
</div>

<% if @challenge.challenger_id == current_user.id %>
  <div class="panel-body" id="shakearea" data-challenge=<%=@challenge.id%> data-email=<%= current_user.email %>>
    <a id="shake-button" class="the-shake-button waves-effect waves-light btn">Join the challenge!</a>
  </div>
<% end %>
